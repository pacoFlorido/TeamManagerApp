<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="15dp"/>
            <stroke android:width="2dp" android:color="@color/azul_principal"/>
            <solid android:color="@color/azul_gris_azulado_complementario"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <corners android:radius="15dp"/>
            <stroke android:width="2dp" android:color="@color/azul_principal"/>
            <solid android:color="@color/azul_principal"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <corners android:radius="15dp"/>
            <stroke android:width="2dp" android:color="@color/azul_principal"/>
            <solid android:color="@color/beis_fondo"/>
        </shape>
    </item>
</selector>